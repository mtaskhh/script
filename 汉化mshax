local function TranslateTextElement(element)
    if not element:IsA("TextLabel") and not element:IsA("TextButton") then
        return
    end
    
    local text = element.Text
    if text == "" or text == "Label" then
        return
    end

    if TranslationTable[text] then
        element.Text = TranslationTable[text]
        return
    end
    
    for english, chinese in pairs(TranslationTable) do
        if english:find("%%") and text:find(english:gsub("%%d", "%%d+"):gsub("%%%.1f", "%%d+%%.?%%d*")) then
            local numberValue = text:match("%d+%.?%d*")
            if numberValue then
                element.Text = chinese:gsub("%%d", numberValue):gsub("%%%.1f", numberValue)
            end
        end
    end
end

local function TranslateExistingInterface()
    local uiContainers = {
        game:GetService("CoreGui"),
        game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui")
    }
    
    for _, container in ipairs(uiContainers) do
        for _, element in ipairs(container:GetDescendants()) do
            TranslateTextElement(element)
        end
    end
end

local function StartUIMonitoring()
    local connections = {}
    
    connections[#connections+1] = game:GetService("CoreGui").DescendantAdded:Connect(TranslateTextElement)
    connections[#connections+1] = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui").DescendantAdded:Connect(TranslateTextElement)
    
    return connections
end

print("🌐 汉化加载器启动")

-- 启动界面监控
local monitoringConnections = StartUIMonitoring()

task.delay(1, function()
    TranslateExistingInterface()
    print("✅ 实时汉化引擎已激活")
end)

print("⬇️ 正在加载目标脚本...")
local scriptContent = game:HttpGet(TargetScriptURL, true)
loadstring(scriptContent)()

print("🎯 目标脚本执行完成")
print("📊 已加载 " .. #TranslationTable .. " 个翻译词条")

return monitoringConnections
